<header class="site-header site-header--fixed <%= "site-header--blue" if current_page.data.title == 'Integrations' %> <%= "site-header--dark" if current_page.data.title == 'Roadmap' %> <%= "site-header--dark" if current_page.data.title == 'Events' %> <%= "site-header--transparent" if current_page.data.title == 'Features' %>">
  <div class="navbar container">
    <div class="logo-wrapper">
      <a class="site-logo" href="/"><%= inline_svg("logo.svg", class: "isvg") %></a>
    </div>

    <nav class="site-menu" role="navigation">
      <ul class="menu-items <%= nav_inactive(["community.html", "blog/", "partners.html"]) %>">
        <li class="nav-item dropdown">
          <a class="dropdown-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Product</a>
          <div class="dropdown-menu dropdown-menu--multi expandable">
            <div class="dropdown-expand">
              <div class="dropdown-expand__list">
                <a class="dropdown-item" href="/features">Features</a>
                <a class="dropdown-item" href="/integrations">Integrations</a>
                <a class="dropdown-item" href="/roadmap">Roadmap</a>
                <a class="dropdown-item open-list expand-use-cases" data-toggle="open-submenu" href="#" role="button" aria-haspopup="true" aria-expanded="false">Use Cases</a>
                <div class="dropdown-expand__sublist use-cases-menu">
                  <a class="dropdown-item" href="/use-cases/online-store">Online Store</a>
                  <a class="dropdown-item" href="/use-cases/headless-commerce">Headless Commerce</a>
                  <a class="dropdown-item" href="/use-cases/marketplace">Marketplace</a>
                  <a class="dropdown-item" href="/use-cases/global-commerce">Global Commerce</a>
                </div>
                <a class="dropdown-item open-list expand-industries" data-toggle="open-submenu" href="#" role="button" aria-haspopup="true" aria-expanded="false">Industries</a>
                <div class="dropdown-expand__sublist industries-menu">
                  <a class="dropdown-item" href="/industries/automotive">Automotive</a>
                  <a class="dropdown-item" href="/industries/home-decor">Home Decor</a>
                  <a class="dropdown-item" href="/industries/apparel">Apparel</a>
                  <a class="dropdown-item" href="/industries/health-and-beauty">Health and Beauty</a>
                  <a class="dropdown-item" href="/industries/food-and-beverage">Food and Beverage</a>
                </div>
              </div>
            </div>
          </div>
        </li>
	      <li class="nav-item dropdown">
          <a class="dropdown-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Community</a>
          <div class="dropdown-menu dropdown-menu--multi expandable">
            <div class="dropdown-expand">
              <div class="dropdown-expand__list">
                <a class="dropdown-item" href="/contributors">Contributors</a>
                <a class="dropdown-item" href="/core-team">Core Team</a>
                <a class="dropdown-item" href="/events">Events</a>
              </div>
            </div>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="dropdown-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Developers</a>
          <div class="dropdown-menu dropdown-menu--multi">
            <a class="dropdown-item" href="https://guides.solidus.io/" target="_blank" rel="noopener noreferrer">Guides &nbsp; <%= inline_svg("icons/external-link.svg", class: "isvg") %></a>
            <div class="dropdown-top">
              <div class="dropdown-top__list">
                <a href="https://guides.solidus.io/" target="_blank" rel="noopener noreferrer">Storefront</a>
                <a href="https://guides.solidus.io/getting-started/installing-solidus" target="_blank" rel="noopener noreferrer">Getting Started</a>
                <a href="https://guides.solidus.io/customization/customizing-the-core" target="_blank" rel="noopener noreferrer">Customize Solidus</a>
                <a href="https://guides.solidus.io/getting-started/using-extensions" target="_blank" rel="noopener noreferrer">Using extensions</a>
              </div>
              <div class="dropdown-top__list">
                <a href="https://solidus.stoplight.io/" target="_blank" rel="noopener noreferrer">API</a>
                <a href="https://solidus.stoplight.io/#authentication" target="_blank" rel="noopener noreferrer">Authentication</a>
                <a href="https://solidus.stoplight.io/#checkout-flow" target="_blank" rel="noopener noreferrer">Checkout Flow</a>
              </div>
            </div>
            <div class="dropdown-bottom">
              <div class="dropdown-bottom__list">
                <a class="dropdown-item" href="/extensions">Extensions</a>
                <a class="dropdown-item" href="/partners/#become-a-partner">Become a Partner</a>
              </div>
              <div class="dropdown-bottom__list">
                <a href="https://github.com/solidusio/solidus" target="_blank" rel="noopener noreferrer"><%= inline_svg("social-icons/github.svg", class: "isvg") %>&nbsp; Fork on GitHub</a>
                <a href="http://slack.solidus.io/" target="_blank" rel="noopener noreferrer"><%= inline_svg("social-icons/slack.svg", class: "isvg") %>&nbsp; Join our Slack</a>
                <a href="https://stackoverflow.com/questions/tagged/solidus" target="_blank" rel="noopener noreferrer"><%= inline_svg("social-icons/stack-overflow.svg", class: "isvg") %>&nbsp; Ask on Stack Overflow</a>
              </div>
            </div>
          </div>
        </li>
        <li class="nav-item <%= nav_active("partners.html") %>"><a href="/partners">Partners</a></li>
        <li class="nav-item <%= nav_active("blog/") %>"><a href="/blog">Blog</a></li>
        <li class="nav-item d-lg-none <%= nav_active("contact.html") %>"><a href="/contact">Contact</a></li>
      </ul>
    </nav>

    <div class="navbar-right">
      <a class="site-menu-toggler" href="#">
        <%= inline_svg("menu.svg", class: "isvg isvg-menu") %>
        <%= inline_svg("close.svg", class: "isvg isvg-close") %>
      </a>
      <div class="github-stars">
        <a class="github-button" href="https://github.com/solidusio/solidus">
          <%= inline_svg("social-icons/github.svg", class: "isvg") %>
          <%= inline_svg("icons/star.svg", class: "isvg star") %>
          <span><%= data.project_stats.github_stars %></span>
        </a>
      </div>
      <a class="btn btn-primary btn-sm" href="/contact">Contact</a>
    </div>
  </div>
</header>
